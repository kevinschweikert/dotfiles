[includeIf "gitdir:~/projects/imen/"]
  path = .gitconfig-imen
[includeIf "gitdir:~/projects/personal/"]
  path = .gitconfig-personal

[alias]
	s = status
	ci = commit
	br = branch
	sw = switch
	up = push
  who = blame -w -C -C -C
	fpush = push --force-with-lease
[push]
	autoSetupRemote = true
[core]
	excludesfile = ~/.gitignore
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[init]
	defaultBranch = main
[rerere]
	enabled = true
  autoUpdate = true
[pull]
	ff = only
[branch]
	sort = -committerdate
[column]
	ui = auto
[gpg]
	format = ssh
[commit]
	gpgsign = true
